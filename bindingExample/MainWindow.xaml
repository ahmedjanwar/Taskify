<Window x:Class="bindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bindingExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Margin="10,10,10,155" x:Name="person_list">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="First name" Width="200" DisplayMemberBinding="{Binding Fname}" />
                    <GridViewColumn Header="Last name" Width="200" DisplayMemberBinding="{Binding Lname}" />
                    <GridViewColumn Header="email" Width="200" DisplayMemberBinding="{Binding Email}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="10,298,0,0" VerticalAlignment="Top" Height="46" Width="110" Click="Button_Click" RenderTransformOrigin="-0.342,3.27"/>

    </Grid>
</Window>
