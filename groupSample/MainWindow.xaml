                        <ListView.View>
                            <GridView>

                                <GridViewColumn Header="i" Width="250" DisplayMemberBinding="{Binding id}" />
                               
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid x:Name="mainGrid0">
                    <!-- your other controls here -->
                    
                </Grid>
               
                <Button Content="Button" HorizontalAlignment="Left" Margin="746,340,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
                


            </Grid>

        </GroupBox>

    </Grid>
</Window>
