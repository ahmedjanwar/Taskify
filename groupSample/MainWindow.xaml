        xmlns:local="clr-namespace:groupSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="505" Width="880">
    <Grid>
        <GroupBox Margin="10,10,10,10" FontSize="16" FontWeight="Bold"  
            Background="LightYellow" BorderBrush="Orange" BorderThickness="3">
            <GroupBox.Header>
                Author Information

            </GroupBox.Header>
            <Grid>

                
                <Grid Margin="19,196,253,10" x:Name="taskhide">
                    <Button Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="149,25,0,0" Width="22" Click="Button_Click_1"/>
